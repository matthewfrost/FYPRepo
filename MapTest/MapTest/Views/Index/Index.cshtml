@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/libs")
</head>
<body>
    <script src="~/Scripts/LocationModel.js"></script>
    <script src="~/Scripts/Controller.js"></script>
    <script src="~/Scripts/ViewModel.js"></script>
    <script src="~/Scripts/View.js"></script>

    <script src="https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/markerclusterer.js">
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAncLbEmMj9HHh2LCJXUFcYJ4F1BRENp4g&callback=initMap">
    </script>
    <div class="wrapper">
        <div id="map"></div>
        <div id="overlay"></div>
    </div>
    <div id="locationCard" data-bind="with: selectedLocation" class="card container" style="display: none">
        <div class="row cardRow">
            <label class="col-xs-4" for="locationName">Name</label>
            <input data-bind="value: Name" class="col-xs-6" id="locationName" type="text" />
        </div>
        <div class="row cardRow">
            <label class="col-xs-4" for="locationTag">Tag Name</label>
            <input data-bind="value:Tag" class="col-xs-6" id="locationTag" type="text" />
        </div>
        <div class="row">
            <button class="col-xs-3 savebtn">Save</button>
            <!--ko if: $root.newLocation() == true-->
                <div class="col-xs-6"></div>
            <!--/ko-->
            <!--ko if: $root.newLocation() == false-->
                <div class="col-xs-2"></div>
                <button class="col-xs-2 deletebtn">Delete</button>
                <div class="col-xs-2"></div>
            <!--/ko-->
            <button id="closeLocation" class="cancelbtn col-xs-3">Cancel</button>
        </div>
    </div>
    <div id="deleteDialog" class="card container deleteDialog" style="display: none">
        <div class="row cardRow">
            <span class="col-xs-12">Are you sure you want to delete this Location?</span>
        </div>
        <div class="row cardRow">
            <button id="deleteLocation" class="col-xs-3 savebtn">Yes</button>
            <div class="col-xs-6"></div>
            <button id="closeDelete" class="col-xs-3 cancelbtn">No</button>
        </div>
    </div>
    
</body>
</html>
